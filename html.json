			"function fcname() {",
			"    let _url = '<?= Router::url(array(",
			"                    'plugin' => false,",
			"                    'admin' => true,",
			"                    'controller' => 'yourController',",
			"                    'action' => 'your_action',",
			"                ), false); ?>';",
			"    $.ajax({",
			"        url: _url,",
			"        cache: false,",
			"        data: {",
			"            'yourParam': 'your_value'",
			"        },",
			"        success: function(data) {",
			"            console.log('data', data);",
			"        },",
			"        error: function(err) {",
			"            console.log('error', err);",
			"        }",
			"    });",
			"}",
		],
		"description": "Ajax Cake"
	},
